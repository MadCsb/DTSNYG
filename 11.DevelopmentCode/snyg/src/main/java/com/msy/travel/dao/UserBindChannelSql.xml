<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.msy.travel.dao.UserBindChannelDao" >

	<!-- 新增信息 -->
	<insert id="insertUserBindChannel" parameterType="userBindChannel">
		INSERT INTO 
			t_sm_userbindchannel  
		(
			F_CHANNELID ,
			F_USERID 
		) VALUES (
			#{channelId} ,
			#{userId} 
		)
	</insert>

	<!-- 校验信息，主键相同则修改，主键不同则添加 -->
	<insert id="mergeUserBindChannel" parameterType="userBindChannel">
		REPLACE INTO 
			t_sm_userbindchannel 
		(
			F_CHANNELID ,
			F_USERID 
		) VALUES (
			#{channelId} ,
			#{userId} 
		)
	</insert>

	<!-- 修改信息 -->
	<update id="updateUserBindChannel" parameterType="userBindChannel">
		UPDATE
			t_sm_userbindchannel 
		SET
			F_USERID = #{userId} 
		<where>
			F_CHANNELID = #{channelId} 
			
		</where>
	</update>
	<!-- 删除消息 -->
	<delete id="deleteUserBindChannel" parameterType="userBindChannel">
		DELETE FROM
			t_sm_userbindchannel 
		<where>
			F_CHANNELID = #{channelId}
			
		</where>
	</delete>
	<!-- 批量删除消息 -->
	<delete id="deleteBatchUserBindChannel" parameterType="userBindChannel">
		DELETE FROM 
			t_sm_userbindchannel 
		<where>
			F_CHANNELID in
			<foreach collection="userBindChannelIdList" item="param" separator="," open="(" close=")">
                   #{param}
            </foreach>
		</where>
	</delete>
	<!-- 查询单个详情 -->
	<select id="queryUserBindChannel" parameterType="String" resultType="userBindChannel">
		SELECT
			t.F_CHANNELID as channelId ,
			t.F_USERID as userId 
		FROM
			t_sm_userbindchannel t
		<where>
			t.F_CHANNELID = #{channelId} 
			
		</where>
	</select>
	<!-- 按条件查询所有 -->
	<select id="queryUserBindChannelList" parameterType="userBindChannel" resultType="userBindChannel">
		SELECT
			t.F_CHANNELID as channelId ,
			t.F_USERID as userId 
		FROM
		t_sm_userbindchannel t
		<where>
			<if test="channelId!=null and channelId!=''">
		    	t.F_CHANNELID = #{channelId}
		     </if>
			
		</where>
		<if test="entityPage != null">
			<if test="entityPage.sortField !=null and entityPage.sortField !='' ">
		    	ORDER BY ${entityPage.sortField}
			</if>
		</if>	
		<if test="entityPage != null">	
			<if test="entityPage.sortOrder !=null and entityPage.sortOrder !='' ">
		    	${entityPage.sortOrder}
			</if>
		</if>
	</select>
</mapper>	